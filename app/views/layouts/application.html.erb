<!DOCTYPE html>
<html>
<head>
  <title>RSVP</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <div id="admin-header">
      <div class="container">
        <%= link_to 'Create New Event', new_event_path, :class=>'button' %>
        <%= link_to 'View Events', events_path, :class=>'button' %>
        <%= link_to 'Sign out', destroy_user_session_path, :class=>'button' %>
      </div>
    </div>
  <% else %>
    <%= link_to 'View Events', events_path, :class=>'button' %>
  <% end %>
  <div class="container">
    <div class="sixteen columns">
      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %>

      <%= yield %>
  </div>
  </div>
</body>
</html>
